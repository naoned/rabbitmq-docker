
TAG?=latest

#------------------------------------------------------------------------------

.DEFAULT_GOAL := help

#------------------------------------------------------------------------------

build: ## Build the image
	docker build --force-rm -t naoned/rabbitmq:$(TAG) .

#------------------------------------------------------------------------------

HELP_TARGET_COLUMN_WIDTH=20
help:
	@echo "========================================"
	@echo "Naoned rabbitmq docker image"
	@echo "========================================"
	@awk 'BEGIN {FS = ":.*?## "} /^[a-zA-Z_-]+:.*?## / {printf "\033[36m%-$(HELP_TARGET_COLUMN_WIDTH)s\033[0m %s\n", $$1, $$2}' $(MAKEFILE_LIST) | sort
	@echo "========================================"

#------------------------------------------------------------------------------

.PHONY: help build
